<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<logger name="viser" level="DEBUG" />


	<root level="WARN">
		<appender-ref ref="STDOUT" />
	</root>
</configuration> 